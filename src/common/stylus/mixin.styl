border-1px($borderColor)
  position: relative
  &:before
    display: block
    position: absolute
    top: 0
    left: 0
    width: 100%
    border-top: 1px solid $borderColor
    content: ''

  &:after
    display: block
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    border-bottom: 1px solid $borderColor
    content: ''
